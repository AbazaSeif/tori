<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<div class="author">
			<a class="avatar" ui:field='avatar' />
			<a class="authorname" ui:field='authorName' />
			<span class="badge" ui:field='badge' />
			<div class='prettytime' ui:field='prettyTime' />
			<a class="permalink" ui:field='permaLink'>Permalink</a>
		</div>
		<div class="body" ui:field="body">
			<g:FocusPanel styleName="posteditorplaceholder" ui:field="postEditorPlaceholder" />
			<g:FocusPanel styleName="settings" ui:field="settings" />
			<div class="bodytext" ui:field='bodyText' />
			<g:FlowPanel styleName="attachments" ui:field='attachments' />

			<div class="footer">
				<g:Button ui:field='upVote' tabIndex="0" />
				<g:Button ui:field='downVote' tabIndex="0" />
				<span class="score" ui:field='score' />

				<g:Label styleName="quoteforreply" ui:field='quote'>Quote for Reply</g:Label>
				<g:FocusPanel styleName="flagpost" ui:field="flag" />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 