<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<g:FocusPanel styleName="settings" ui:field="settings" />
		<div class="author">
			<div class="avatar" ui:field='avatar' />
			<div class="authorname" ui:field='authorName' />
			<div class="badge" ui:field='badge' />
			<div class="postedtime">
				<span class='prettytime' ui:field='prettyTime' />
				<span class='timestamp' ui:field='timeStamp' />
			</div>
			<a class="permalink" ui:field='permaLink'>Permalink</a>
		</div>
		<div class="body">
			<div class="bodytext" ui:field='bodyText' />
			<g:FlowPanel styleName="attachments" ui:field='attachments' />
		</div>
		<div class="footer">
			<div class="toolbar">
				<div class="score scorecomponent">
					<g:Button ui:field='upVote' tabIndex="0" />
					<g:Button ui:field='downVote' tabIndex="0" />
					<div ui:field='score' />
				</div>
				<div class="actions">
					<g:FocusPanel styleName="flag" ui:field="flag" />
					<g:Label styleName="quote" ui:field='quote'>Quote for Reply</g:Label>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 