<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<div class="author">
			<a class="avatar" ui:field='avatar' />
			<div class="authornamewrapper">
				<a class="authorname" ui:field='authorName' />
				<span class="badge" ui:field='badge' />
			</div>
			<div class='prettytime' ui:field='prettyTime' />
			<a class="permalink" ui:field='permaLink'>Permalink</a>
		</div>
		<div class="body" ui:field="body">
			<g:SimplePanel styleName="posteditorplaceholder" ui:field="postEditorPlaceholder" />
			<g:SimplePanel styleName="settings" ui:field="settings" />
			<div class="bodytext" ui:field='bodyText' />
			<g:FlowPanel styleName="attachments" ui:field='attachments' />
			<g:SimplePanel styleName="footer" ui:field="footer" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 